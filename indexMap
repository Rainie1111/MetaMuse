        var pl = window.pl = new Loca.PointLayer({
            zIndex: 10,
            blend: 'lighter',
        });

  var style = {
            radius: 30,
            unit: 'px',
            color: '#a81f1f',
            borderWidth: 0,
            blurWidth: 3.5,
        }
        pl.setSource(geo);
        pl.setStyle(style);
        loca.add(pl);

        pl.addAnimate({
          key: 'radius',
          value: [0.7, 1],
          duration: 1000,
          easing: 'Linear',
          transform: 2000,
          random: true,
          delay: 8000,
          yoyo:true,
          repeat: 100000
        });
